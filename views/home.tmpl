{{template "master" .}}

{{define "content"}}
	<table class="table table-bordered table-hovered">
		<thead>
			<th>ID</th>
			<th>FROM URL</th>
			<th>TO URL</th>
			<th>Hit Count</th>
			<th>Action</th>
		</thead>
		<tbody>
			{{ range $i, $url := .urls}}
			<tr>
				<td>{{add $i 1}}</td>
				<td>{{$url.FromURL}}</td>
				<td>{{$url.ToURL}}</td>
				<td>{{$url.HitCount}}</td>
				<td>
					<a data-url="/delete/{{$url.Id}}" class="text-danger" href="#">Delete</a>
				</td>
			</tr>
			{{end}}
		</tbody>
	</table>
{{end}}
